<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".detall_llibre"
    tools:showIn="@layout/activity_detall_llibre">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_detalls">
        <TextView
            android:id="@+id/dtxtTitol"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/dtxtAutor"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/dtxtEditorial"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/dtxtTapa"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/dtxtPreu"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:textSize="10sp"/>
    </LinearLayout>

